@model RemoteWorkManagement.Models.LoginModel
<div class="login-layout">
    <div class="main-container">
        <div class="main-content">
            <div class="row">
                <div class="col-sm-offset-10 col-sm-offset-1">
                    <div class="login-container">
                        <div class="center">
                            <h1>
                                <i class="icon-leaf green"></i>
                                <span class="blue">Remote</span>
                                <span class="green">Manager</span>
                            </h1>
                            <h4 class="blue">&copy; Scio Consulting</h4>
                        </div>

                        <div class="space-6"></div>
                        <div class="position-relative">
                            <div id="login-box" class="login-box visible widget-box no-border">
                                <div class="widget-body">
                                    <div class="widget-main">
                                        <h4 class="header blue lighter bigger">
                                            <i class="icon-coffee green"></i>
                                            Please enter your credentials
                                        </h4>
                                        <div class="space-6"></div>
                                        @using (Html.BeginForm("Authorize", "Home", FormMethod.Post, new { @id = "login" }))
                                        {
                                            @Html.AntiForgeryToken()
                                            <fieldset>
                                                <label class="block clearfix">
                                                    <span class="btn-block input-icon input-icon-right">
                                                        <input type="email" class="form-control" placeholder="Email" style="width: 280px" tabindex="1" 
                                                               name="username"
                                                               autofocus
                                                               required
                                                               data-bv-emailaddress-message="Invalid email address"/>
                                                        <i class="icon-user"></i>
                                                    </span>
                                                </label>

                                                <label class="block clearfix">
                                                    <span class="btn-block input-icon input-icon-right">
                                                        <input type="password" class="form-control" placeholder="Password" style="width: 280px" tabindex="2"
                                                               name="password"
                                                               required
                                                               data-bv-notempty-message="The password is required and cannot be empty"/>
                                                        <i class="icon-lock"></i>
                                                    </span>
                                                </label>

                                                <div class="space"></div>

                                                <div class="clearfix">
                                                    <label class="inline">
                                                        <input type="checkbox" class="ace" />
                                                        <span class="lbl"> Remember Me</span>
                                                    </label>

                                                    <button type="submit" class="width-35 pull-right btn btn-sm btn-primary" tabindex="3">
                                                        <i class="icon-key"></i>
                                                        Login
                                                    </button>
                                                </div>
                                                <div class="space-4"></div>
                                            </fieldset>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>