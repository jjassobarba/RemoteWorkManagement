@model RemoteWorkManagement.Models.LoginViewModel

<div>
    <div class="main-container">
        <div class="main-content">
            <div class="row">
                <div class="col-sm-offset-10 col-sm-offset-1">
                    <div class="login-container">
                        <div class="center">
                            <h1>
                                <i class="icon-leaf green"></i>
                                <span class="blue">Remote</span>
                                <span class="green">Manager</span>
                            </h1>
                            <h4 class="blue">&copy; Scio Consulting</h4>
                        </div>

                        <div class="space-6"></div>
                        <div class="position-relative">
                            <div id="forgot-box" class="forgot-box visible widget-box no-border" ng-show="forgotBox">
                                <!-- forgot password-->
                                <div class="widget-body">
                                    <div class="widget-main">
                                        <h4 class="header red lighter bigger">
                                            <i class="icon-key"></i>
                                            Retrieve Password
                                        </h4>

                                        <div class="space-6"></div>
                                        <p>
                                            Enter your email and to receive instructions
                                        </p>
                                        <fieldset>
                                            <label class="block clearfix">
                                                <span class="block input-icon input-icon-right">
                                                    <input type="email" class="form-control" ng-model="email" placeholder="Email" style="width: 280px" />
                                                    <i class="icon-envelope"></i>
                                                </span>
                                            </label>

                                            <div class="clearfix">
                                                <button ng-click="RecoverPassword()" class="width-35 pull-right btn btn-sm btn-danger">
                                                    <i class="icon-lightbulb"></i>
                                                    Send Me!
                                                </button>
                                            </div>
                                        </fieldset>
                                    </div><!-- /widget-main -->

                                    <div class="toolbar center">
                                        <a href="#" ng-click="hideForgotBox()" class="back-to-login-link">
                                            Back to login
                                            <i class="icon-arrow-right"></i>
                                        </a>
                                    </div>
                                </div><!-- /widget-body -->
                            </div><!-- /forgot-box -->

                            <div id="login-box" class="login-box visible widget-box no-border" ng-show="loginBox">
                                <!--login-box-->
                                <div class="widget-body">
                                    <div class="widget-main">
                                        <h4 class="header blue lighter bigger">
                                            <i class="icon-coffee green"></i>
                                            Please enter your credentials
                                        </h4>
                                        <div class="space-6"></div>
                                        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                                        {
                                            @Html.AntiForgeryToken()
                                            @Html.ValidationSummary(true);

                                            <label class="block clearfix">
                                                <span class="btn-block input-icon input-icon-right">
                                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email", @style = "width:280px", @name = "username", @autofocus = "" })
                                                    <i class="icon-envelope"></i>
                                                </span>
                                            </label>

                                            <label class="block clearfix">
                                                <span class="btn-block input-icon input-icon-right">
                                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password", @style = "width:280px", @name = "password" })
                                                    <i class="icon-lock"></i>
                                                </span>
                                            </label>

                                            <div class="space"></div>

                                            <div class="clearfix">
                                                <label class="inline">
                                                    @Html.CheckBoxFor(p => p.RememberMe)
                                                    <span class="lbl"> Remember Me</span>
                                                </label>

                                                <button type="submit" class="width-35 pull-right btn btn-sm btn-primary">
                                                    <i class="icon-key"></i>
                                                    Login
                                                </button>
                                            </div>

                                            <div class="space-4"></div>
                                        }                                        
                                    </div>
                                    <div class="toolbar clearfix">
                                        <div>
                                            <a href="#" ng-click="hideLoginBox()" class="forgot-password-link">
                                                <i class="icon-arrow-left"></i>
                                                I forgot my password
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div> <!-- /login-box -->

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>