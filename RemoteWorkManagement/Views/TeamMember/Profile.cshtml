
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_InnerLayout.cshtml";
}
<div ng-controller="TeamMemberCtrl" ng-cloak>
    <div class="breadcrumbs" id="breadcrumbs">
        <script type="text/javascript">
            try { ace.settings.check('breadcrumbs', 'fixed'); } catch (e) { }
        </script>
        <ul class="breadcrumb">
            <li>
                <i class="icon-home home-icon"></i>
                <a href="/Admin/">Home</a>
            </li>
            <li class="active">Profile</li>
        </ul>
    </div>
    <div class="page-content">
        <div notifications="top right"></div>
        <div class="page-header">
            <h1>
                Profile
            </h1>
        </div>
        <fieldset>
            <div class="container">
                <div ng-show="showInfo">
                    
                    
                    <div class="progress progress-small progress-striped active" ng-show="loading">
                        <div class="progress-bar progress-bar-info" style="width: 100%;"></div>
                    </div>

                    <div class="row vertical-spacer">
                        <div class="col-xs-8">
                            <div id="userProfile" class="user-profile">
                                <div class="col-xs-12 col-sm-4 center">
                                    <span class="profile-picture">
                                        <img ng-src="data:image/JPEG;base64,{{picture}}" style="width:100%; height:100%;">
                                    </span>

                                    <div class="space space-4"></div>
                                    <form ng-submit="updatePicture(modelInstance)">
                                        <input type="file" id="uploadImageButton" name="uploadImageButton" ng-model="modelInstance.img" />
                                        <button class="btn btn-large btn-block btn-primary">
                                            <i class="icon-picture bigger-110"></i>
                                            <span class="bigger-110">Update Profile Picture</span>
                                        </button>
                                    </form>
                                </div>
                                <div class="col-xs-2 col-sm-8">
                                    <h4 class="blue">
                                        <span class="middle">{{fullName}}</span>
                                    </h4>
                                    <div class="profile-info-row">
                                        <div class="profile-info-name">Email</div>
                                        <div class="profile-info-value">
                                            <span>{{email}}</span>
                                        </div>
                                    </div>
                                    <div class="profile-info-row">
                                        <div class="profile-info-name">Position</div>
                                        <div class="profile-info-value">
                                            <span>{{position}}</span>
                                        </div>
                                    </div>
                                    <div class="profile-info-row">
                                        <div class="profile-info-name">Flextime</div>
                                        <div class="profile-info-value">
                                            <span>{{flexTime}}</span>
                                        </div>
                                    </div>
                                    <div class="profile-info-row">
                                        <div class="profile-info-name">Remote Work</div>
                                        <div class="profile-info-value">
                                            <span ng-repeat="day in remoteDaysArray">
                                                {{day}}
                                            </span>
                                        </div>
                                    </div>
                                        
                                    <div class="profile-info-row">
                                        <div class="profile-info-name">Project Leader</div>
                                        <div class="profile-info-value">
                                            <span>{{idProjectLeader}}</span>
                                        </div>
                                    </div>
                                        
                                    <div class="profile-info-row">
                                        <div class="profile-info-name">Sensei</div>
                                        <div class="profile-info-value">
                                            <span>{{idSensei}}</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                      
                    </div>
                    <div class="row">
                        <br/><br/>
                        <div id="accordion" class="accordion-style1 panel-group col-sm-9">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title">
                                        <a class="accordion-toggle collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseThree">
                                            <i class="bigger-110 icon-check" data-icon-hide="ace-icon fa fa-angle-down" data-icon-show="ace-icon fa fa-angle-right"></i>
                                            &nbsp;Check-in
                                        </a>
                                    </h4>
                                </div>

                                <div class="panel-collapse collapse" id="collapseThree" style="height: 0px;">
                                    <div class="panel-body">
                                        <!--Panel body-->

                                        <div class="col-xs-12 col-sm-4 widget-container-span ui-sortable">
                                            <div class="widget-box">

                                                <div class="widget-header">
                                                    <h5 class="smaller">Automatic CheckIn</h5>
                                                    <div class="widget-toolbar">
                                                        <span class="label label-default">
                                                            <i class="icon-check bigger-140"></i>
                                                        </span>
                                                    </div>
                                                </div>

                                                <div class="widget-body">
                                                    <div class="widget-main padding-6">
                                                        <br />
                                                        <button id="btnCheckIn" class="btn btn-success" ng-click="checkIn()">
                                                            <i class="icon-check bigger-230"></i>
                                                            Automatic CheckIn
                                                        </button>
                                                        <br /><br /><p></p>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>


                                        <div class="col-xs-12 col-sm-4 widget-container-span ui-sortable">
                                            <div class="widget-box">

                                                <div class="widget-header">
                                                    <h5 class="smaller">Manual CheckIn</h5>
                                                    <div class="widget-toolbar">
                                                        <span class="label label-default">
                                                            <i class="icon-check bigger-140"></i>
                                                        </span>
                                                    </div>
                                                </div>
                                                <form ng-submit="checkInM()">
                                                    <div class="widget-body">
                                                        <div class="widget-main padding-6">
                                                            <p>
                                                                <div class="input-group bootstrap-timepicker">
                                                                    <span class="input-group-addon">
                                                                        <i class="icon-time bigger-110"></i>
                                                                    </span>
                                                                    <input id="timepickerCheckIn" type="text" class="form-control" required="" ng-model="checkInTime" />
                                                                </div>
                                                            </p>
                                                            <p>
                                                                <button id="btnCheckInM" class="btn btn-success btn-mini">
                                                                    <i class="icon-unchecked bigger-125"></i>
                                                                    CheckIn
                                                                </button>
                                                            </p>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>


                                        <div id="warning-dialog" class="hide">
                                            <p>
                                                Type aditional info
                                            </p>
                                            <div class="hr hr-12 hr-double"></div>
                                            <p>
                                                Please add a comment.
                                            </p>
                                            <div>
                                                <textarea cols="25" rows="10" ng-model="checkIncomment"></textarea>
                                            </div>
                                        </div>

                                    </div><!--/Panel Body-->
                                </div>
                            </div>

                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title">
                                        <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapseFour">
                                            <i class="bigger-110 icon-unchecked" data-icon-hide="ace-icon fa fa-angle-down" data-icon-show="ace-icon fa fa-angle-right"></i>
                                            &nbsp;Check-Out
                                        </a>
                                    </h4>
                                </div>

                                <div class="panel-collapse collapse in" id="collapseFour" style="height: 0px;">
                                    <div class="panel-body">

                                        <div class="col-xs-12 col-sm-4 widget-container-span ui-sortable">
                                            <div class="widget-box">

                                                <div class="widget-header">
                                                    <h5 class="smaller">Automatic CheckOut</h5>
                                                    <div class="widget-toolbar">
                                                        <span class="label label-default">
                                                            <i class="icon-unchecked bigger-140"></i>
                                                        </span>
                                                    </div>
                                                </div>

                                                <div class="widget-body">
                                                    <div class="widget-main padding-6">
                                                        <br />
                                                        <button id="btnCheckOut" class="btn btn-primary btn-large" ng-click="checkOut()">
                                                            <i class="icon-unchecked bigger-230"></i>
                                                            Automatic CheckOut
                                                        </button>
                                                        <br /><br /><p></p>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>


                                        <div class="col-xs-12 col-sm-4 widget-container-span ui-sortable">
                                            <div class="widget-box">

                                                <div class="widget-header">
                                                    <h5 class="smaller">Manual CheckOut</h5>
                                                    <div class="widget-toolbar">
                                                        <span class="label label-default">
                                                            <i class="icon-unchecked bigger-140"></i>
                                                        </span>
                                                    </div>
                                                </div>
                                                <form ng-submit="checkOutM()">
                                                    <div class="widget-body">
                                                        <div class="widget-main padding-6">
                                                            <p>
                                                                <div class="input-group bootstrap-timepicker">
                                                                    <span class="input-group-addon">
                                                                        <i class="icon-time bigger-110"></i>
                                                                    </span>
                                                                    <input id="timepickerCheckOut" type="text" class="form-control" ng-model="checkOutTime" required />
                                                                </div>
                                                            </p>
                                                            <p>
                                                                <button id="btnCheckOutM" class="btn btn-primary btn-mini ">
                                                                    <i class="icon-unchecked bigger-125"></i>
                                                                    CheckOut
                                                                </button>
                                                            </p>
                                                        </div>
                                                    </div>
                                                </form>

                                            </div>
                                        </div>


                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </fieldset>
    </div>
</div>
